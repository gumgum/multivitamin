{
    "settings": {
        "index.codec": "best_compression"
    },
    "mappings" : {
        "{type}":{
            "dynamic_templates":[
                {
                    "AvroArrays":{
                        "match_mapping_type":"object",
                        "unmatch":"media_annotation",
                        "mapping":{
                            "type":"nested"
                        }
                    }
                },
                {
                    "Integers":{
                       "match_mapping_type":"long",
                        "mapping":{
                            "type":"integer"
                        } 
                    }
                },
                {
                    "Floats":{
                        "match_mapping_type": "double",
                        "unmatch":"t*",
                        "mapping":{
                            "type":"half_float"
                        }
                    }
                },
                {
                    "Timestamps":{
			"match_mapping_type": "double",
                        "match":"t*",
                        "mapping":{
                            "type":"float"
                        }
                    }
                },
		{
                    "IntTimestamps":{
			"match_mapping_type": "long",
                        "match":"t*",
                        "mapping":{
                            "type":"float"
                        }
                    }
                },
                {
                    "Dates":{
                        "match":"date",
                        "mapping":{
                            "type":"date",
			    "format":"yyyyMMddHHmmss"
                        }
                    }
                },
                {
                    "Text2Keywords":{
                        "match":"text",
                        "mapping":{
                            "type":"keyword"
                        }
                    }
                }
            ]
        }
    }
}
